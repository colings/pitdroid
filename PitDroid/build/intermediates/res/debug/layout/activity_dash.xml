<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout 
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/footer"
    android:layout_width="match_parent" 
    android:layout_height="match_parent"
    android:orientation="vertical">
    <LinearLayout 
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:gravity="right"
        android:padding="3dip">
        <TextView 
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/lastUpdate"/>
        <TextView 
            android:id="@+id/lastUpdate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingLeft="10sp"/> 
    </LinearLayout>     
    <com.gridlayout.GridLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res/com.bonstead.pitdroid"
        android:id="@+id/GridLayout1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:columnCount="3" >
    
        <ImageButton
            android:id="@+id/probe0Alarm"
            app:layout_rowSpan="2"
            android:contentDescription="@string/alarm"
            android:src="@drawable/ic_alarm_unset" />
    
        <TextView
            android:id="@+id/probe0Name"
            android:text="Probe 0:"
            android:textAppearance="?android:attr/textAppearanceLarge" />
    
        <TextView
            android:id="@+id/probe0Val"
            android:text="0.0°"
            android:textAppearance="?android:attr/textAppearanceLarge" />
    
        <TextView
            android:id="@+id/probe0Delta"
            app:layout_columnSpan="2"
            android:text="0.0° above set temp"
            android:textAppearance="?android:attr/textAppearanceSmall" />
    
        <ImageButton
            android:id="@+id/probe1Alarm"
            app:layout_rowSpan="2"
            android:contentDescription="@string/alarm"
            android:src="@drawable/ic_alarm_unset" />
    
        <TextView
            android:id="@+id/probe1Name"
            android:text="Probe 1:"
            android:textAppearance="?android:attr/textAppearanceLarge" />
    
        <TextView
            android:id="@+id/probe1Val"
            android:text="0.0°"
            android:textAppearance="?android:attr/textAppearanceLarge" />
    
        <TextView
            android:id="@+id/probe1Time"
            app:layout_columnSpan="2"
            android:text="0:00 to 0"
            android:textAppearance="?android:attr/textAppearanceSmall" />
        
        <ImageButton
            android:id="@+id/probe2Alarm"
            app:layout_rowSpan="2"
            android:contentDescription="@string/alarm"
            android:src="@drawable/ic_alarm_unset" />
    
        <TextView
            android:id="@+id/probe2Name"
            android:text="Probe 2:"
            android:textAppearance="?android:attr/textAppearanceLarge" />
    
        <TextView
            android:id="@+id/probe2Val"
            android:text="0.0°"
            android:textAppearance="?android:attr/textAppearanceLarge" />
    
         <TextView
             android:id="@+id/probe2Time"
             app:layout_columnSpan="2"
             android:text="0:00 to 0"
             android:textAppearance="?android:attr/textAppearanceSmall" />
    
        <ImageButton
            android:id="@+id/probe3Alarm"
            app:layout_rowSpan="2"
            android:contentDescription="@string/alarm"
            android:src="@drawable/ic_alarm_unset" />
    
        <TextView
            android:id="@+id/probe3Name"
            android:text="Probe 4:"
            android:textAppearance="?android:attr/textAppearanceLarge" />
    
        <TextView
            android:id="@+id/probe3Val"
            android:text="0.0°"
            android:textAppearance="?android:attr/textAppearanceLarge" />
    
        <TextView
            android:id="@+id/probe3Time"
            app:layout_columnSpan="2"
            android:text="0:00 to 0"
            android:textAppearance="?android:attr/textAppearanceSmall" />
    
        <com.gridlayout.Space
            android:id="@+id/space2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    
        <TextView
            android:id="@+id/fanSpeedName"
            android:text="@string/fan_speed"
            android:textAppearance="?android:attr/textAppearanceLarge" />
    
        <TextView
            android:id="@+id/fanSpeedVal"
            android:text="0%"
            android:textAppearance="?android:attr/textAppearanceLarge" />
    
    
    </com.gridlayout.GridLayout>
  
